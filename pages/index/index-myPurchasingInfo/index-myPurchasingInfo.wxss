.container {
  height: 100%;
  width: 750rpx;
}

.container > text {
  line-height: 70rpx;
  justify-content: flex-start;
  position: relative;
  top: 15rpx;
  right: 250rpx;
  color: #707070;
  font-size: 28rpx;
}

.tab_indInfo {
  width: 680rpx;
  height: 180rpx;
  background-color: white;
  padding: 15rpx;
  margin: 10rpx;
