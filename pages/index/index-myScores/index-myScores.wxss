/* pages/index/index-myScores/index-myScores.wxss */
.tab_userinfo {
  width: 628rpx;
  height: 440rpx;
  background-color: white;
  padding: 10rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
  box-shadow:0 0 6px #dddddd;
}

.userinfo {
  position: relative;
  top: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo > button{
  position:relative;
  top:160rpx
}

.userinfo-avatar {
  width: 240rpx;
  height: 240rpx;
  /* margin: 32rpx; */
  border-radius: 50%;
}

.total-score {
  color: #000000;
  font-size: 28rpx;
  margin: 16rpx;
}

.my-scores {
  color: #AFAFAF;
  font-size: 26rpx;
  margin: 6rpx;
}

.btn-window {
  position: absolute;
  top: 550rpx;
}

.tab_scoresWindow{
  width: 628rpx;
  height: 398rpx;
  background-color: white;
  padding: 10rpx;
  padding-bottom: 10rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-radius: 20rpx;
  box-shadow:0 0 6px #dddddd;
  font-size: 26rpx;
}

.tab_scoresWindow > view {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

.tab_scoresWindow > view > view{
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  color: black;
  box-shadow:0 0 6px #dddddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}
