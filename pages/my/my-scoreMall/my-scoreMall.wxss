/* pages/my/my-scoreMall/my-scoreMall.wxss */
.my-score {
  width: 652rpx;
  height: 86rpx;
  background-color: white;
  color: #707070;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  box-shadow:0 0 6px #dddddd;
  font-size: 44rpx;
  margin: 10rpx;
  margin-bottom: 40rpx;
}

.scores-mall {
  width: 660rpx;
  height: 882rpx;
  background-color: white;
  color: #707070;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  box-shadow:0 0 6px #dddddd;
  font-size: 44rpx;
}

.scores-mall-inner {
  width: 510rpx;
  height: 780rpx;
  background-color: white;
  color: #707070;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 5%;
  font-size: 44rpx;
}

.scores-mall-inner > view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 80rpx;
  align-items: center;
  width: 100%;
}

.scores-mall-inner > view > button{
  width: 228rpx;
  height: 228rpx;
  border-radius: 8%;
  background-color: #2481C1;
  color: white;
  box-shadow:0 0 6px #dddddd;
  padding: 0px;
  line-height: 1.6;
  display: flex; 
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
  