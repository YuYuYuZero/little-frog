      <view>
        <button hover-class="none" bindtap="zanweikaifa">
          <text style="font-size:36rpx">全场</text>
          <text style="font-size:36rpx">满300减30</text>
          <text style="font-size:28rpx;opacity:0.5">100积分</text>
        </button>
        <button hover-class="none" bindtap="zanweikaifa">
          <text style="font-size:36rpx">全场</text>
          <text style="font-size:36rpx">满200减20</text>
          <text style="font-size:28rpx;opacity:0.5">120积分</text>
        </button>
      </view>
      <view>
        <button hover-class="none" bindtap="zanweikaifa">
          <text style="font-size:36rpx">全场</text>
          <text style="font-size:36rpx">九折优惠券</text>
          <text style="font-size:28rpx;opacity:0.5">150积分</text>
        </button>
        <button hover-class="none" bindtap="zanweikaifa">
          <text style="font-size:36rpx">全场</text>
          <text style="font-size:36rpx">八折优惠券</text>
          <text style="font-size:28rpx;opacity:0.5">200积分</text>
        </button>
      </view>
      <view>
        <button hover-class="none" bindtap="zanweikaifa">
          <text style="font-size:36rpx">满200减50</text>
